<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LaunchScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:text="Please Swipe the Card" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- MasterCard ImageButton -->
        <ImageButton
            android:layout_width="1dp"
            android:id="@+id/master"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/master_card"
        android:scaleType="fitCenter"
        android:contentDescription="MasterCard"/>

        <!-- Visa ImageButton -->
        <ImageButton
            android:layout_width="1dp"
            android:id="@+id/visa"
            android:layout_height="170sp"
            android:layout_weight="1"
            android:src="@drawable/visa_card"
        android:scaleType="fitCenter"
        android:contentDescription="Visa"/>

        <!-- Manual Entry ImageButton -->
        <ImageButton
            android:layout_width="1dp"
            android:id="@+id/manual"
            android:layout_height="170sp"
            android:layout_weight="1"
            android:src="@drawable/manual_entry"
        android:scaleType="fitCenter"
        android:contentDescription="Manual Entry"/>
    </LinearLayout>
</LinearLayout>
